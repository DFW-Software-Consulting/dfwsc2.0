{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "module": "CommonJS",
    "target": "ES2022"
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "**/__tests__/**/*",
    "**/*.test.ts",
    "**/*.spec.ts",
    "vite.config.*",
    "vitest.config.*"
  ]
}
