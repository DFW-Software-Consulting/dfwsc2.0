# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Server Configuration
PORT=4242

# CORS Configuration (optional for development)
# Frontend is now served by the same server at / (no CORS needed)
# For local development with separate frontend server, set to:
# FRONTEND_ORIGIN=http://localhost:5173,http://localhost:4242
FRONTEND_ORIGIN=http://localhost:4242

# API Base URL (optional - will be auto-detected if not set)
API_BASE_URL=http://localhost:4242

# Payment Configuration
USE_CHECKOUT=true
DEFAULT_PROCESS_FEE_CENTS=100

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/stripe_portal
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=stripe_portal

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@yourdomain.com

# Optional Configuration
NODE_ENV=development
ADMIN_API_KEY=
ENABLE_SWAGGER=true

# Admin Authentication (JWT)
# Username for admin login access to client management endpoints
ADMIN_USERNAME=admin

# Password for admin authentication
# For development: use plain text password
# For production: use bcrypt hashed password (e.g., $2b$10$...)
# Generate hash: bcrypt.hash('your_password', 10)
ADMIN_PASSWORD=changeme_secure_password

# Secret key for signing JWT tokens
# MUST be minimum 32 characters long for security
# Generate secure random string: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_minimum_32_characters_long_random_string

# JWT token expiration time (optional, defaults to "1h")
# Supported formats: "1h", "30m", "7d", "24h"
# Shorter expiry = more secure but requires more frequent re-authentication
JWT_EXPIRY=1h
