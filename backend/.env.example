# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Server Configuration
PORT=4242

# CORS Configuration
# For Docker hot reload dev mode (frontend on 5174, backend on 4242):
FRONTEND_ORIGIN=http://localhost:5174,http://localhost:4242
# For production Docker (nginx proxy):
# FRONTEND_ORIGIN=http://localhost:8080
# For local dev without Docker:
# FRONTEND_ORIGIN=http://localhost:5173,http://localhost:4242

# API Base URL (optional - will be auto-detected if not set)
API_BASE_URL=http://localhost:4242

# Payment Configuration
USE_CHECKOUT=true
DEFAULT_PROCESS_FEE_CENTS=100

# Database Configuration
# For Docker: use service name 'db'
DATABASE_URL=postgresql://postgres:postgres@db:5432/stripe_portal
# For local dev (without Docker): use 'localhost'
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/stripe_portal

POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=stripe_portal

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@yourdomain.com

# Optional Configuration
NODE_ENV=development
ADMIN_API_KEY=
ENABLE_SWAGGER=true
